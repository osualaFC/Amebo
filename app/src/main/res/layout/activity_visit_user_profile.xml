<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".VisitUserProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cover_image_visit_settings"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cover"
                android:scaleType="centerCrop"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_visit_settings"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/username_visit_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image_visit_settings"
                android:text="username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/visit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/cv_visit"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:padding="6dp">

        <ImageView
            android:id="@+id/set_fb_visit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/fb"
            android:layout_gravity="center"
            android:scaleType="center"/>
        <ImageView
            android:id="@+id/set_ig_visit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/instagram"
            android:layout_gravity="center"
            android:scaleType="center"/>
        <ImageView
            android:id="@+id/set_web_visit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/website"
            android:layout_gravity="center"
            android:scaleType="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="send message"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_below="@id/visit_ll"/>


</RelativeLayout>